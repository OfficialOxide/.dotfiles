### Settings from original zathurarc ###
set adjust-open width
map <C-Tab> toggle_statusbar
set guioptions ""
map <A-Tab> feedkeys :blist<Tab>
set selection-clipboard clipboard
set window-title-home-tilde true
set statusbar-home-tilde true
set adjust-open "best-fit"
set render-loading              true
set font "Inter 12"

### zathura-pywal ###
# Allow recolor
set recolor 'false'

# Don't allow original hue when recoloring
set recolor-keephue 'true'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'true'

# Command line completion entries
set completion-fg '#aeaeb5'
set completion-bg '#0a0a0e'

# Command line completion group elements
set completion-group-fg '#2c7464'
set completion-group-bg '#0a0a0e'

# Current command line completion element
set completion-highlight-fg '#0a0a0e'
set completion-highlight-bg '#aeaeb5'

# Default foreground/background color
set default-bg rgba(,,,1)

# Input bar
set inputbar-fg '#aeaeb5'
set inputbar-bg '#0a0a0e'

# Notification
set notification-fg '#aeaeb5'
set notification-bg '#0a0a0e'

# Error notification
set notification-error-fg '#aeaeb5'
set notification-error-bg '#545464'

# Warning notification
set notification-warning-fg '#aeaeb5'
set notification-warning-bg '#545464'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#aeaeb5'
set statusbar-bg '#0a0a0e'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#2c7464'
set highlight-active-color '#2c7464'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#aeaeb5'

# 'Loading...' text
set render-loading-fg '#aeaeb5'
set render-loading-bg '#0a0a0e'

# Index mode
set index-fg '#aeaeb5'
set index-bg '#0a0a0e'

# Selected element in index mode
set index-active-fg '#0a0a0e'
set index-active-bg '#aeaeb5'
